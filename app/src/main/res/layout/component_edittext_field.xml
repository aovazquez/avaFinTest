<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fieldContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="2dp"
        android:background="@drawable/background_custom_field_normal">

        <TextView
            android:id="@+id/tvFieldTitle"
            style="@style/FieldTitle"
            android:paddingHorizontal="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etMainField"
            android:layout_marginHorizontal="8dp"
            style="@style/FieldEntry"
            app:layout_constraintTop_toBottomOf="@+id/tvFieldTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ivIconVisibility"/>

        <ImageView
            android:id="@+id/ivIconVisibility"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginHorizontal="8dp"
            android:focusable="true"
            android:clickable="true"
            android:visibility="gone"
            app:tint="@color/medium_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvFieldError"
        style="@style/FieldError"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</LinearLayout>

